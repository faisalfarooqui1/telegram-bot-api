#include <iostream>
#include <unistd.h>
#include <sys/wait.h>
#include <string>
#include <vector>
#include <fstream>
using namespace std;
int main(int argc, char* argv[])
{
ios::sync_with_stdio(false);
if(argc != 3)
{
cout << "Invalid arguments: \nUsage : " << argv[0] << " <file containing URLs> <directory to save all the files>\nExample: "<<argv[0]<<\
" ~/Documents/url.txt" << " ~/Downloads\n";
exit(0);
}
   pid_t pid;
   int status; //int i = 0;
   vector<string> url_list;
   ifstream input_file(argv[1]);
   string str;
   while(getline(input_file, str))
{
url_list.push_back(str);
}
   pid = fork();
   for ( int i = 0; i < url_list.size(); i++ )
   {
       if ( pid == -1 )
       {
       printf ( "Process creation failed. Exiting.\n" );
       exit(1);
       }
       else if ( pid == 0 )
       {
       execlp("wget","-c", "-P", argv[2], url_list[i].c_str(), NULL);
       break;
}
       else
       {
           if ( waitpid ( pid, &status, 0 ) > 0 );
           pid = fork();
       }
   }
return 0;
}
